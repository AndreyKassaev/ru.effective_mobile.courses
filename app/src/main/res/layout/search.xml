<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/rounded_search_edittext_background"
        android:drawableStart="@drawable/search"
        android:drawablePadding="8dp"
        android:hint="@string/search_courses"
        android:inputType="textAutoComplete"
        android:paddingHorizontal="16dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/search_bar_hint"
        android:layout_marginEnd="8dp"
        />

    <ImageButton
        android:contentDescription="@string/search_icon_button_filter"
        android:padding="16dp"
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/search_filter_button_icon"
        android:background="@drawable/search_filter_button_background"

        />
</LinearLayout>